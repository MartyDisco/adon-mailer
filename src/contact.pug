doctype html
html
	head
		meta(charset='utf-8')
		style(type='text/css')
			include foundation-emails.css
		style(type='text/css').
			a {
				text-decoration: none !important;
				outline: none !important;
			}

			.columns {
				padding: 0 !important;
				width: 100% !important;
			}

			table.header {
				margin-bottom: 50px;
			}

			table.header img {
				margin-top: 20px;
				margin-bottom: 10px;
				max-width: 300px;
				margin-right: auto;
				margin-left: auto;
				display: table;
			}

			table.header h2 {
				margin-bottom: 20px;
				color: #fff;
				font-weight: 600;
				font-size: 20px;
			}

			table.content {
				margin-bottom: 50px;
			}

			table.content h1 {
				margin-bottom: 20px;
				font-weight: 600;
				font-size: 22px;
			}

			table.content h3 {
				margin-bottom: 0;
				padding: 0 20px;
				color: #000;
				font-weight: 300;
				font-size: 16px;
				line-height: 1.6;
			}

			table.footer p,
			table.footer a {
				font-weight: 600;
				font-size: 16px;
			}

			table.footer p {
				margin-top: 20px !important;
				margin-bottom: 20px !important;
			}
body
	table.body
		tr
			td.float-center(align='center', valign='top')
				center
					table.container.float-center(align='center')
						tr
							td
								table.row.header(style=`background-color:${color}`)
									tr
										th.first.last.large-12.columns
											if (logo)
												img.float-center(src=`${url}${logo}`)
											h2.text-center=header
										th.expander
								table.row.content
									tr
										th.first.last.large-12.columns
											h1.text-center(style=`color:${color}`)=title
											h3.text-center=text
										th.expander
								table.row.footer
									tr
										th.first.last.large-12.columns
											p.text-center(style=`color:${color}`)
												| #{`Â© ${new Date().getFullYear()} ${app} | `}
												a(href=url, style=`color:${color}`)=url.split('://')[1]
										th.expander
